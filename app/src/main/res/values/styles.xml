<resources>

    <!-- Base application theme. -->
    <style name="EarthquakeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="EarthquakeTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EarthquakeTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="EarthquakeTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="EarthquakeTheme.MidTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EarthquakeTheme.ItemDialogStyle">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
</resources>
